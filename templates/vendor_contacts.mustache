<div class="row">
    <div class="col">
        <h3>{{#str}}team_members, local_order{{/str}}</h3>
        <table id="vendor_contacts_table" class="table table-striped table-hover">
            <thead class="bg-dark">
            <tr>
                <th>
                    {{#str}}lastname{{/str}}
                </th>
                <th>
                    {{#str}}firstname{{/str}}
                </th>
                <th>
                    {{#str}}email{{/str}}
                </th>
                <th>

                </th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#contacts}}
                <tr id="row{{id}}">
                    <td>
                        {{lastname}}
                    </td>
                    <td>
                        {{firstname}}
                    </td>
                    <td>
                        {{email}}
                    </td>
                    <td>
                        <button
                                class="btn btn-outline-danger btn-sm btn-delete-contact"
                                title="{{#str}}delete_team_member, local_order{{/str}}"
                                data-id="{{id}}">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            {{/contacts}}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="col d-flex justify-content-end">
            <div class="form-group fitem">
                <button type="button" class="btn btn-outline-primary btn-add-new">{{#str}}new, local_order{{/str}}</button>
            </div>
        </div>
    </div>
</div>

<div class="row user-form" style="display: none;">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="float-right close-user-form" style="cursor: pointer;">X</div>
                <h5>{{#str}}select_user, local_order{{/str}}</h5>
                <div class="row">
                    <div class="col-9">
                        <select id="userid" class="form-control">
                            <option value=""></option>
                            {{#users}}
                                <option value="{{id}}">{{lastname}}, {{firstname}} - {{email}}</option>
                            {{/users}}
                        </select>

                    </div>
                    <div class="col-3">
                        <button type="button" id="btn-save-contact" data-vendorid="{{vendorid}}" class="btn btn-outline-primary btn-lg">
                            <i class="fa fa-floppy-o"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


