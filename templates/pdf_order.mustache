<table border="0" style="border-width: 0; width: 100%" cellspacing="12">
    <tr>
        <td style="text-align: center" colspan="2">
            <h2>York University</h2>
            <h2>{{title}}</h2>
        </td>
    </tr>
    <tr>
        <td style="vertical-align: top; text-align: left">
            <b>{{#str}}organization, local_order{{/str}}</b>
            <hr>
            {{#organization}}
                {{name}}
            {{/organization}}
        </td>
        <td style="vertical-align: top">
            <b>{{#str}}event, local_order{{/str}}: {{code}}</b>
            <hr>
            {{#str}}event_name, local_order{{/str}}: {{name}}<br>
            {{#organization}}
                {{#str}}phone, core{{/str}}: {{phone}}<br>
                {{#str}}email, core{{/str}}: {{email}}<br>
            {{/organization}}
            {{#str}}event_type, local_order{{/str}}: {{#event_type}}{{name}}{{/event_type}}<br>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <b>{{#str}}booking_details, local_order{{/str}}</b>
            <hr>
            <b>{{date}}</b><br>
            <b>{{start_time}} - {{end_time}} {{name}}</b><br>
            <b>{{room}}</b><br><br>
            {{#setup_notes}}
                <b>{{#str}}setup_notes, local_order{{/str}}</b>: <br>
                {{setup_notes}}
                <br><br>
            {{/setup_notes}}
            {{#other_notes}}
                <b>{{#str}}other_notes, local_order{{/str}}</b>: <br>
                {{other_notes}}
            {{/other_notes}}

            <table border="0" style="border-width: 0; border-style: none; width:100%;">
                <tr>
                    <td style="width:5%"></td>
                    <td style="width:90%">
                        {{#inventory_items}}
                            <h4>{{name}}</h4>
                            <table style="border-width: 0; width: 80%">
                                <tr>
                                    <td style="width:60%">{{#str}}details, local_order{{/str}}</td>
                                    <td style="width:20%; text-align: center">{{#str}}quantity, local_order{{/str}}</td>
                                    <td style="width:20%; text-align: end">{{#str}}cost, local_order{{/str}}</td>
                                </tr>
                                {{#items}}
                                    <tr>
                                        <td style="width:60%;">{{name}}</td>
                                        <td style="width:20%; text-align: center">{{quantity}}</td>
                                        <td style="width:20%; text-align: end">{{cost_formatted}}</td>
                                    </tr>
                                {{/items}}
                                <tr>
                                    <td style="width:60%;"></td>
                                    <td style="width:20%; text-align: center"></td>
                                    <td style="width:20%; text-align: end">
                                        <b>{{total_cost}}</b>
                                    </td>
                                </tr>
                            </table>
                        {{/inventory_items}}
                    </td>
                    <td style="width:5%"></td>
                </tr>
            </table>
        </td>
    </tr>

</table>